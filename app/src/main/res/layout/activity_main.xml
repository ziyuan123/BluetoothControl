<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a7351.bluetoothcontrol.MainActivity">



    <ListView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/BlueToothList"
        android:background="@drawable/listview"
        android:layout_toRightOf="@+id/a1"
        android:layout_below="@+id/a1"
        android:layout_alignRight="@+id/tv"
        android:layout_alignEnd="@+id/tv"></ListView>


    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:background="@drawable/linearlayout2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/a1"
        android:layout_toEndOf="@+id/a1"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"></LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/a1"
        android:layout_above="@+id/a2"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/a2"
        android:background="@drawable/button"
        android:layout_above="@+id/a3"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/a3"
        android:background="@drawable/button"
        android:layout_above="@+id/a4"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/a4"
        android:background="@drawable/button"
        android:layout_above="@+id/a5"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Check Blue  tooth"
        android:onClick="list"
        android:id="@+id/a5"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="108dp"
        android:layout_height="75dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/box"
        android:text="单击屏幕得到相应屏幕的位置"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/a1" />


</RelativeLayout>
